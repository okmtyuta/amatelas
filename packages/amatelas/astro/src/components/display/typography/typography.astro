---
import type { HTMLAttributes } from 'astro/types'
import { styleSourceRecord } from '@okmtyuta/amatelas-theme'
import type { Color, FontWeightType } from '@okmtyuta/amatelas-lib'
import type { FontSizeType } from '@okmtyuta/amatelas-lib'

type DefaultSpanProps = HTMLAttributes<'span'>
type Props = DefaultSpanProps & {
  color: Color,
  size?: FontSizeType,
  weight? :FontWeightType
}

const { classes } = styleSourceRecord.typography
const color = (Astro.props.color as Color) || 'info'
const size = (Astro.props.size as FontSizeType) || 'body1'
const weight = (Astro.props.weight as FontWeightType) || 'body1'

const { color: _color, size: _size, weight: _weight, ...props } = Astro.props
---

<span {...props} class:list={[classes.typography, classes[color], classes.size[size], classes.weight[weight]]}
  ><slot /></span
>
