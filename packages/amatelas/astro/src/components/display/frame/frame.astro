---
import type { HTMLTag, Polymorphic } from 'astro/types'
import { styleSourceRecord } from '@okmtyuta/amatelas-theme'

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
}>

const { classes } = styleSourceRecord.frame
const Element = (Astro.props.as as HTMLTag) || 'div'

const { as: _as, ...props } = Astro.props
---

<Element {...props} class:list={[classes.frame]}>
  <slot />
</Element>
