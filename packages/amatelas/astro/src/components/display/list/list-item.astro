---
import type { HTMLAttributes } from 'astro/types'
import { styleSourceRecord } from '@okmtyuta/amatelas-theme'
import { DiscSVG } from '../../../svg'

const classes = styleSourceRecord.listItem.classes

type DefaultParagraphProps = HTMLAttributes<'li'>
type Props = DefaultParagraphProps
---

<li {...Astro.props} class={classes.listItem}>
  <span class={classes.marker}>
    <DiscSVG class={classes.disc} />
  </span>
  <slot />
</li>
