---
import type { HTMLAttributes } from 'astro/types'
import { styleSourceRecord } from '@okmtyuta/amatelas-theme'

type DefaultParagraphProps = HTMLAttributes<'p'>
type Props = DefaultParagraphProps

const { classes } = styleSourceRecord.paragraph
const { ...props } = Astro.props
---

<p {...props} class={classes.paragraph}>
  <slot />
</p>
