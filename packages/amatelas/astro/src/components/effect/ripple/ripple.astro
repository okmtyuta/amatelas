---
import type { HTMLAttributes } from 'astro/types'
import { type Color } from '@okmtyuta/amatelas-lib'
import { ripple } from '@okmtyuta/amatelas-theme'

type Props = {
  x?: number
  y?: number
  color?: Color
  theme?: 'light' | 'dark'
} & HTMLAttributes<'span'>

const { classes } = ripple
const { x = 0, y = 0, color = "info", theme = "light", ...props } = Astro.props
---

<span
  {...props}
  style={`top:${y}px;left:${x}px;`}
  class:list={[
    classes.ripple,
    classes.color(color),
    classes[theme]
  ]}
>
  <slot />
</span>
