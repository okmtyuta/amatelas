---
import type { HTMLAttributes } from 'astro/types'
import { type Color } from '@okmtyuta/amatelas-lib'
import { styleSourceRecord } from '@okmtyuta/amatelas-theme'

type Props = {
  x?: number
  y?: number
  color?: Color
  theme?: 'light' | 'dark'
} & HTMLAttributes<'span'>

const { classes } = styleSourceRecord.ripple
const { x = 0, y = 0, color = 'info', theme = 'light', ...props } = Astro.props
---

<span
  {...props}
  style={`top:${y}px;left:${x}px;`}
  class:list={[classes.ripple, classes[color], classes[theme]]}
>
  <slot />
</span>
